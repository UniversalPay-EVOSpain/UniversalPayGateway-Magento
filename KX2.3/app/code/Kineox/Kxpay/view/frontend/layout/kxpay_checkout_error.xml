<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="page.main.title">
			<action method="setPageTitle">
				<argument translate="true" name="title" xsi:type="string">Error procesando el pago</argument>
			</action>
		</referenceBlock>

		<referenceContainer name="content">
			<block class="Kineox\Kxpay\Block\Error" name="redsys_checkout_error" template="Kineox_Kxpay::error.phtml" cacheable="false" />
		</referenceContainer>
	</body>
</page>